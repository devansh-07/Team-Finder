<div class="card mx-0 my-3">
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-auto">
                    <a class="anchor" href="/profile/<%= fuser.username %>">
                        <img src="<%= fuser.image %>" style="width: 100%; max-width: 80px; max-height: 80px;" class="rounded-circle"/>
                    </a>
                </div>

                <div class="col border-right mt-1">
                    <!-- Name -->
                    <h5 class="card-title mb-0">
                        <a class="anchor anchor-dark" href="/profile/<%= fuser.username %>">
                            <%= fuser.name %>
                        </a>
                    </h5>
            
                    <!-- Headline -->
                    <h6 class="card-subtitle my-1 text-muted" style="font-size: .925em;"><%= fuser.profile.headline %></h6>
            
                    <!-- Project -->
                    
                    <details>
                        <summary class="my-2">
                            <span class="text-primary" style="font-size: .875em;">
                                Project Details
                                <i class="fa fa-angle-down"></i>
                            </span>
                        </summary>
                        
                        <div class="mb-2 my-2 text-sm p-3 px-3 border" style="font-size: .9em;">
                            <h5 class="mt-0 mb-3" style="font-size: 1.325em;"><%= invite.project.name %></h5>
                            
                            <%= invite.project.description %>

                            <div class="my-2">
                                <% if (invite.project.liveUrl) { %> 
                                    <h6 class="my-1" style="font-size: .9rem;">Live: <a class="anchor" target="_blank" href="<%= invite.project.liveUrl %>"><%= invite.project.liveUrl %> </a></h6>    
                                <% } %>
            
                                <% if (invite.project.codeUrl) { %> 
                                    <h6 class="my-1" style="font-size: .9rem;">Code: <a class="anchor" target="_blank" href="<%= invite.project.codeUrl %>"><%= invite.project.codeUrl %> </a></h6>    
                                <% } %>
                            </div>
        
                            <% if (invite.project.technologies) { %>
                                <div class="mt-3">
                                    <% for (tech of invite.project.technologies[0].split(",")) { %> 
                                            <small class="tag rounded mr-2 px-2 py-1"><%= tech %></small>
                                    <% } %> 
                                </div>
                            <% } %>
                        </div>
                    </details>

                    <!-- Message -->
                    <p class="mb-1" style="font-size: .975em;"><%= invite.message %></p>
                </div>

                <div class="col-auto bg-succes">
                    <div class="p-0 px-0">
                        <% if (inv.status === "pending") { %> 
                            <a href="/invites/cancel/<%= invite._id %>" style="min-width: 96px;" class="a-btn btn btn-dark">
                                Cancel
                            </a>
                        <% } else if (inv.status === "accepted") { %>
                            <button class="btn text-success border" style="cursor: default; background-color: transparent; box-shadow: none; min-width: 96px;" value="<%= req.hostname %>:8000/profile/<%= user.username %>" onclick="copyPrfLink()" id="copyProfileLink">
                                Accepted
                            </button>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
